%--------------------------------------------------------------------------------
% Fonts
%--------------------------------------------------------------------------------
\setmainfont{Baskerville}
\setsansfont{Graphik}

%--------------------------------------------------------------------------------
% Title Page
%--------------------------------------------------------------------------------
\renewcommand{\title}[2]{
        % title page
        \thispagestyle{empty}
        \begin{center}
		\iftoggle{separateTitlePage}{
			\vspace*{20mm}
		}{}
                \MakeUppercase{
                        \textbf{\docTitle}\\
                        \vspace{10mm}
                        {\footnotesize #1}\\
                        \vspace{5mm}
                }
		{\footnotesize\textit{#2}}
        \end{center}
	\iftoggle{separateTitlePage}{
		\newpage
	}{
		\vspace{10mm}
	}
}

%--------------------------------------------------------------------------------
% Sections
%--------------------------------------------------------------------------------
\titleformat{\section}{\center\small\bfseries\MakeUppercase}{\thesection}{1em}{}
\titleformat{\subsection}{\vspace{3mm}\center\footnotesize\MakeUppercase}{\thesubsection}{1em}{\vspace{1mm}}

%--------------------------------------------------------------------------------
% Header and Footer
%--------------------------------------------------------------------------------
\newcommand{\header}[2]{
	% even pages
	\fancyhead[RE]{\color{gray}\small\textit{#2} \quad $\vert$ \quad \thepage}
	% odd pages
	\fancyhead[LO]{\color{gray}\small\thepage \quad $\vert$ \quad \textit{#1}}
}

\pagestyle{fancy}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\sectionmark}[1]{\markboth{}{#1}}
\setlength{\headsep}{0.3in}

\fancyhf{}
