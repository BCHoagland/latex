%--------------------------------------------------------------------------------
% Title Page
%--------------------------------------------------------------------------------
\newcommand{\formalTitle}[3]{
        % all introductory pages have lowercase roman numerals as page numbers
        \pagenumbering{roman}

        % title page
        \thispagestyle{empty}
        \begin{center}
                \vspace*{20mm}
                \MakeUppercase{
                        \textbf{#1}\\
                        \vspace{5mm}
                        {\small #2}\\
                        \vspace{10mm}
                }
                #3
        \end{center}
        \newpage
}

%--------------------------------------------------------------------------------
% Sections
%--------------------------------------------------------------------------------
\titleformat{\subsection}{\center\bfseries}{\thesubsection}{1em}{}

%--------------------------------------------------------------------------------
% Header and Footer
\pagestyle{fancy}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\sectionmark}[1]{\markboth{}{#1}}
\setlength{\headsep}{0.3in}

\fancyhf{}
\fancyhead[RE]{\color{gray}\thepage}
\fancyhead[LO]{\color{gray}\thepage}
\iftoggle{sectionheaders}{
        \fancyhead[C]{\color{gray}\small\MakeUppercase{\rightmark}}
}{
        \fancyhead[C]{\color{gray}\small\MakeUppercase{\docTitle}}
}
