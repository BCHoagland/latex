%--------------------------------------------------------------------------------
% Title Page
%--------------------------------------------------------------------------------
\renewcommand{\title}[2]{
        % title page
        \thispagestyle{empty}
        \begin{center}
		\iftoggle{separateTitlePage}{
			\vspace*{20mm}
		}{}
                \MakeUppercase{
                        \textbf{\docTitle}\\
                        \vspace{10mm}
                        {\footnotesize #1}\\
                        \vspace{5mm}
                }
		{\footnotesize\textit{#2}}
        \end{center}
	\iftoggle{separateTitlePage}{
		\newpage
	}{
		\vspace{10mm}
	}
}

%--------------------------------------------------------------------------------
% Sections
%--------------------------------------------------------------------------------
\titleformat{\section}{\center\small\bfseries\MakeUppercase}{\thesection}{1em}{}
\titleformat{\subsection}{\vspace{3mm}\center\footnotesize\MakeUppercase}{\thesubsection}{1em}{\vspace{1mm}}

%--------------------------------------------------------------------------------
% Header and Footer
%--------------------------------------------------------------------------------
\newcommand{\formalHeader}[2]{
	% odd pages
	\iftoggle{sectionheaders}{
		\fancyhead[RO]{\color{gray}\small\textit{\rightmark} \quad \thepage}
	}{
		\fancyhead[RO]{\color{gray}\small\textit{#2} \quad \thepage}
	}
	% even pages
	\fancyhead[LE]{\color{gray}\small\thepage \quad \textit{#1}}
}

\pagestyle{fancy}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\sectionmark}[1]{\markboth{}{#1}}
\setlength{\headsep}{0.3in}

