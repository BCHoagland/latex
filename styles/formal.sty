%--------------------------------------------------------------------------------
% Title Page
%--------------------------------------------------------------------------------

\newcommand{\formalTitle}[3]{
	% all introductory pages have lowercase roman numerals as page numbers
	\pagenumbering{roman}

	% title page
	\thispagestyle{empty}
	\begin{center}
		\vspace*{20mm}
		\uppercase{
			\textbf{#1}\\
			\vspace{5mm}
			{\small #2}\\
			\vspace{10mm}
		}
		#3
	\end{center}
	\newpage
}

%--------------------------------------------------------------------------------
